<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>semiproject</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

<filter>
	<filter-name>encoding</filter-name>
	<filter-class>com.kh.simdo.common.filter.EncodingFilter</filter-class>
</filter>
<filter-mapping>
	<filter-name>encoding</filter-name>
	<url-pattern>*.do</url-pattern>
</filter-mapping>
<filter>
	<filter-name>auth</filter-name>
	<filter-class>com.kh.simdo.common.filter.AuthFilter</filter-class>
</filter>
<filter-mapping>
	<filter-name>auth</filter-name>
	<url-pattern>*.do</url-pattern>
</filter-mapping>
<!--우리가 지정한 예외처리
/exception으로 요청이 재지정되며, request와 response객체가 ExceptionHandler 서블릿으로 전달-->
<error-page>
	<exception-type>com.kh.simdo.common.exception.CustomException</exception-type>
	<location>/exception</location>
</error-page>
</web-app>